{
    "name": "@sagittal/sagittal-forum",
    "version": "1.0.0",
    "description": "helpers and materials related to the Sagittal forum\n\n",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Sagittal/scripts-forum.git"
    },
    "scripts": {
        "setup": "npm i",
        "lint": "node --max-old-space-size=131072 ./node_modules/.bin/eslint . --fix",
        "format": "prettier --write .",
        "typecheck": "node --max-old-space-size=131072 ./node_modules/.bin/tsc --noEmit",
        "check": "npm run typecheck && npm run lint && npm run format",
        "update-staff-code": "node -r ts-node/register/transpile-only --max-old-space-size=131072 src/scripts/updateStaffCode.ts"
    },
    "devDependencies": {
        "@eslint/js": "^9.14.0",
        "@sagittal/general": "^1.0.120",
        "@types/eslint__js": "^8.42.3",
        "@types/node": "^18.8.0",
        "@types/ssh2": "^1.11.6",
        "eslint": "^9.14.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-unused-imports": "^4.1.4",
        "prettier": "^3.3.3",
        "ssh2": "^1.11.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4",
        "typescript-eslint": "^8.13.0"
    },
    "engines": {
        "node": ">=14"
    }
}
